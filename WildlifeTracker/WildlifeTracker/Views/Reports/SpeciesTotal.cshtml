@model WildlifeTracker.ViewModels.Reports.SpeciesTotalVm
@{
    ViewData["Title"] = "Общ брой животни от вид (област)";
}

<h2>@ViewData["Title"]</h2>

<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-md-3">
        <label class="form-label">Година</label>
        <select name="year" class="form-select" asp-items="Model.YearOptions"></select>
    </div>
    <div class="col-md-5">
        <label class="form-label">Вид</label>
        <select name="speciesId" class="form-select" asp-items="Model.SpeciesOptions">
            <option value="">-- изберете --</option>
        </select>
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary w-100" type="submit">Покажи</button>
    </div>
</form>

@if (Model.SpeciesId == null)
{
    <div class="alert alert-info">Изберете вид.</div>
}
else
{
    <div class="alert alert-success">
        <strong>@Model.SpeciesName</strong> — общо за @Model.Year: <strong>@Model.Total</strong>
    </div>
}
